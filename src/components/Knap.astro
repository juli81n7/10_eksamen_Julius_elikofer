---
const { text, color, link, type } = Astro.props;
---

<a class={color + " " + type} href={link}>
  {text}
</a>

<style>
  a {
    padding: 0.7rem 2.1rem 0.5rem 2.1rem;
    font-family: "Perandory";
    font-size: 1.5rem;
    font-weight: 100;
    text-decoration: none;
    cursor: pointer;
    line-height: 1rem;
  }

  .phone {
    width: 100%;
    display: flex;
    justify-content: center;
    padding: 1rem 2.1rem 1rem 2.1rem;
  }

  .blue {
    background-color: var(--primarycolor);
    color: var(--secondarycolor);
  }

  .blue:hover {
    background-color: var(--secondarycolor);
    border: 1px solid var(--primarycolor);
    color: var(--primarycolor);
    transition: 0.2s ease;
  }

  .white {
    background-color: var(--secondarycolor);
    color: var(--primarycolor);
  }

  .white:hover {
    background-color: var(--primarycolor);

    color: var(--secondarycolor);
    transition: 0.2s ease;
  }

  .true {
    opacity: 30%;
    pointer-events: none;
  }

  .phone.true {
    display: none;
  }
</style>
